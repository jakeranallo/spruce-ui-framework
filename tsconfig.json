{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "es2015",
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "paths": {
      "@components": [
        "components"
      ],
      "@components/*": [
        "components/*"
      ],
      "@animation": [
        "animation"
      ],
      "@animation/*": [
        "animation/*"
      ],
      "@global": [
        "global"
      ],
      "@global/*": [
        "global/*"
      ]
    },
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}